/* gradient background */

.gradiant-animation {
  background: linear-gradient(92deg, #5a0b03, #0c4d01, #0d0261, #611b01, #565800, #3b0163);
  background-size: 1200% 1200%;

  -webkit-animation: AnimationName 48s ease infinite;
  -moz-animation: AnimationName 48s ease infinite;
  animation: AnimationName 48s ease infinite;
}

@-webkit-keyframes AnimationName {
  0%{background-position:0% 51%}
  50%{background-position:100% 50%}
  100%{background-position:0% 51%}
}
@-moz-keyframes AnimationName {
  0%{background-position:0% 51%}
  50%{background-position:100% 50%}
  100%{background-position:0% 51%}
}
@keyframes AnimationName { 
  0%{background-position:0% 51%}
  50%{background-position:100% 50%}
  100%{background-position:0% 51%}
}

/* Auth dialog */

.auth-dialog {
  background-color: #2c3351;;
}

.auth-fields {
  display: flex;
}

.auth-fields > div {
  padding: 0 10px;
  min-height: 55px;
  display: flex;
  align-items: center;
}

.auth-dialog-title {
  border-bottom: 1px solid #384166;
  color: #d6d9e0;
  display: flex;
  justify-content: space-between;
  font-size: 24px;
  padding: 14px;
}

.auth-left-fields {
  min-width: 33%;
  border-right: 1px solid #384166;
  color: #dae1f4;
  flex-direction: row-reverse;
}

.auth-right-fields {
  min-width: 67%;
  color: #dae1f4;
  flex-direction: row;
}

.background-color-272e48 {
  background-color: #272e48;
}

.background-color-3a405a {
  background-color: #3a405a;
}

.background-color-161f35 {
  background-color: #161f35;
}

.auth-footer {
  border-top: 1px solid #384166;
  color: #dae1f4;
}

.auth-footer > div {
  padding: 6px;
}

.auth-text {
  background-color: #2f3650;
  border: 1px solid #3a4369;
  outline: none;
  border-radius: 5px;
  padding: 5px;
  width: 100%;
  caret-color: white;
  color: white;
}

.auth-text:focus {
  background-color: #272e48;
  border: 1px solid #737d92;
}

.auth-close-x {
  color: #838aa2;
  font-size: 35px;
  font-weight: bold;
}

.auth-close-x:hover {
  color: #22b9ff;
  cursor: pointer;
}

.auth-footer-fields {
  display: flex;
}

.auth-footer-left {
  flex: 33%
}

.auth-footer-right {
  flex: 67%;
}

.auth-button {
  color: white;
  padding: 7px;
  text-align: center;
  border-radius: 4px;
  border: 0;
  min-width: 110px;
}

.auth-button:disabled {
  opacity: .5;
}

.auth-grey-button {
  background-color: #929db0;
}

.auth-grey-button:hover {
  background-color: #aab1c2;
}

.button-lightblue {
  background-color: #22b9ff;
}

.button-lightblue:hover {
  background-color: #4bc6ff;
}

.button-orange {
  background-color: #d35500;
}

.button-orange:hover {
  background-color: #f48b7d;
}

.auth-password-text {
  border-radius: 5px 0 0 5px !important;
  border-right: 0 !important;
}

.auth-password-text:focus + .show-password-button {
  background-color: #272e48;
  border: 1px solid #737d92;
}

.show-password-button {
  display: flex;
  width: 80px;
  gap: 5px;
  align-items: center;
  border-radius: 0 5px 5px 0 !important;
}
