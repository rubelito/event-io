.scheduler-toolbar {
  position: fixed;
  z-index: 2;
}

/* Gradiant annimation on toolbar */

.scheduler-toolbar-top {
  background: transparent;
  border-bottom: 1px solid rgba(255,255,255,.1);
}

.scheduler-toolbar-down {
  background-color: #272e48 !important;
  border-bottom: 1px solid #3d445b;
  box-shadow: 0px 5px 7px 3px rgba(0,0,0,0.22);
  -webkit-box-shadow: 0px 5px 7px 3px rgba(0,0,0,0.22);
  -moz-box-shadow: 0px 5px 7px 3px rgba(0,0,0,0.22);
}

